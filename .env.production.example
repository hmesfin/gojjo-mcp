# Production MCP Server Configuration
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8000
ENVIRONMENT=production

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your-strong-redis-password
REDIS_DB=0

# Caching Configuration
CACHE_TTL=21600  # 6 hours in seconds
CACHE_MAX_SIZE=10000
ENABLE_CACHE_WARMING=true

# External API Configuration
PYPI_API_URL=https://pypi.org/pypi
NPM_API_URL=https://registry.npmjs.org
GITHUB_API_URL=https://api.github.com
GITHUB_TOKEN=ghp_your_github_token_here

# Rate Limiting
RATE_LIMIT_ANONYMOUS=100
RATE_LIMIT_AUTHENTICATED=1000
RATE_LIMIT_PREMIUM=5000

# Security
SECRET_KEY=your-very-strong-secret-key-here
API_KEY_LENGTH=32
CORS_ORIGINS=https://mcp.gojjoapps.com

# Logging
LOG_LEVEL=WARNING
LOG_FORMAT=json
LOG_FILE=/var/log/mcp-server/app.log

# Custom Libraries
AIDA_PERMISSIONS_DOCS_URL=https://github.com/your-org/aida-permissions
CUSTOM_LIBRARY_REFRESH_INTERVAL=43200  # 12 hours in seconds

# Monitoring & Alerting
ENABLE_METRICS=true
METRICS_PORT=9090
SENTRY_DSN=https://your-sentry-dsn-here@sentry.io/project-id

# Production Settings
DEBUG=false
WORKERS=4
WORKER_CLASS=uvicorn.workers.UvicornWorker
MAX_REQUESTS=10000
MAX_REQUESTS_JITTER=1000

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/mcp.gojjoapps.com.crt
SSL_KEY_PATH=/etc/ssl/private/mcp.gojjoapps.com.key
FORCE_HTTPS=true

# Database (optional - for future scaling)
DATABASE_URL=postgresql://user:password@postgres:5432/mcp_server
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# Domain Configuration
DOMAIN=mcp.gojjoapps.com
SUBDOMAIN=mcp

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30