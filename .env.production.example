# Production Environment Variables
# Copy this file to .env.production and update with secure values

# Server Configuration
ENVIRONMENT=production
DEBUG=false
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8000
HEALTH_PORT=8080

# Security Keys - MUST CHANGE THESE!
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_64_CHARACTER_STRING
API_ENCRYPTION_KEY=CHANGE_THIS_TO_A_RANDOM_32_CHARACTER_STRING

# Redis Configuration
REDIS_URL=redis://:YOUR_STRONG_REDIS_PASSWORD@redis:6379/0
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# API Keys
GITHUB_TOKEN=ghp_YOUR_GITHUB_PERSONAL_ACCESS_TOKEN
PYPI_API_TOKEN=pypi-YOUR_PYPI_API_TOKEN

# External API Limits
MAX_EXTERNAL_API_CALLS_PER_HOUR=1000
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# Cache Configuration
CACHE_TTL=21600  # 6 hours
CACHE_MAX_SIZE=1000
CACHE_BACKEND=redis

# Security Settings
ALLOWED_HOSTS=mcp.gojjoapps.com
CORS_ALLOWED_ORIGINS=https://gojjoapps.com
SECURE_SSL_REDIRECT=true
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true

# Logging
LOG_LEVEL=WARNING
LOG_FILE=/app/logs/mcp-server.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5
SENTRY_DSN=https://YOUR_SENTRY_DSN@sentry.io/PROJECT_ID

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
HEALTH_CHECK_ENABLED=true

# API Documentation
DOCS_ENABLED=false  # Disable in production
SWAGGER_ENABLED=false

# Performance
WORKER_PROCESSES=4
WORKER_THREADS=2
WORKER_TIMEOUT=30
KEEPALIVE_TIMEOUT=5

# Webhook Security
WEBHOOK_SECRET=CHANGE_THIS_TO_A_RANDOM_SECRET
WEBHOOK_SIGNATURE_HEADER=X-Hub-Signature-256

# IP Security
IP_WHITELIST_ENABLED=false
IP_WHITELIST=127.0.0.1,10.0.0.0/8
IP_BLACKLIST_ENABLED=true
IP_BLACKLIST=

# Content Security
MAX_REQUEST_SIZE=1048576  # 1MB
MAX_URI_LENGTH=500
MAX_HEADER_SIZE=8192

# Database (for future use)
DATABASE_URL=postgresql://user:password@localhost/dbname
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Email Alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=alerts@gojjoapps.com
SMTP_PASSWORD=YOUR_SMTP_PASSWORD
ALERT_EMAIL=security@gojjoapps.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # 2 AM daily
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=gojjo-mcp-backups

# Feature Flags
FEATURE_CUSTOM_LIBRARIES=true
FEATURE_GITHUB_INTEGRATION=true
FEATURE_DOCUMENTATION_PARSING=false  # Disabled due to security concerns

# Docker Settings
DOCKER_MODE=true
CONTAINER_MEMORY_LIMIT=512m
CONTAINER_CPU_LIMIT=1.0