# MCP Server Configuration
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8000
ENVIRONMENT=development

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Caching Configuration
CACHE_TTL=21600  # 6 hours in seconds
CACHE_MAX_SIZE=1000
ENABLE_CACHE_WARMING=true

# External API Configuration
PYPI_API_URL=https://pypi.org/pypi
NPM_API_URL=https://registry.npmjs.org
GITHUB_API_URL=https://api.github.com
GITHUB_TOKEN=  # Optional: for higher rate limits

# Rate Limiting
RATE_LIMIT_ANONYMOUS=100  # requests per hour
RATE_LIMIT_AUTHENTICATED=1000  # requests per hour
RATE_LIMIT_PREMIUM=5000  # requests per hour

# Security
SECRET_KEY=your-secret-key-here-change-in-production
API_KEY_LENGTH=32
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/mcp-server.log

# Custom Libraries
AIDA_PERMISSIONS_DOCS_URL=https://github.com/your-org/aida-permissions
CUSTOM_LIBRARY_REFRESH_INTERVAL=86400  # 24 hours in seconds

# Monitoring & Alerting
ENABLE_METRICS=true
METRICS_PORT=9090
SENTRY_DSN=  # Optional: for error tracking
HEALTH_CHECK_INTERVAL=30  # seconds

# Production Settings (override in .env.production)
DEBUG=true
WORKERS=1
WORKER_CLASS=uvicorn.workers.UvicornWorker
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100

# SSL Configuration (production)
SSL_CERT_PATH=
SSL_KEY_PATH=
FORCE_HTTPS=false

# Database (optional - for future scaling)
DATABASE_URL=sqlite:///./mcp-server.db
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10